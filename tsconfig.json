{
    "compilerOptions": {
        // Modern output for esbuild to consume
        "target": "ES2020",
        "module": "ESNext",

        // Enable declaration files (run tsc manually with overrides)
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist",

        // Pathing & resolution
        "rootDir": "./src",
        "baseUrl": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        // Strict typing
        "strict": true,
        "skipLibCheck": true,

        // Useful for debugging
        "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "examples"]
}
